- title "Bastardi - Film, ve kterém hraje mnoho známých herců"
- description "Přijďte se podívat na známé tváře. Ve filmu hrají Ladislav Potměšil, Kristýna Leichtová, Alexand Hemala, Saša Rašilov, Tomáš Magnusek, Jan Přeučil a další."
:javascript
  $(document).ready(function() {
    $("#actorList li a").hover(function(){
      $(this).addClass("hover");
    },function(){
      $(this).removeClass("hover");
    }).click(function(){
      $("#actorList li a").removeClass("active");
      $(this).addClass("active");
    });

    _typeface_js.renderDocument();
  });
  function changeActor(jmeno){
    $(".slideshow").hide();
    if($(".actorPhoto").is(':visible')){
      $(".actorPhoto").fadeOut(100,function(){
        showActor(jmeno);
      });
    }else{
      showActor(jmeno);
    }
  }
  function showActor(jmeno){
    $("#actorDetail tr td").html($("#" + jmeno).html());
    $(".actorPhoto").css("background-image", "url('/herci/" + jmeno + ".JPG')");
    $(".actorPhoto").fadeIn(100);
  }

